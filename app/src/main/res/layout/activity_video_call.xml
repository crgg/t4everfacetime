<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VideoCallActivity">

    <com.t4app.t4videocall.ui.MainParticipantView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.t4app.t4videocall.ui.ParticipantView
        android:id="@+id/pinContainer"
        android:visibility="gone"
        android:layout_width="95dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/callActionsContainer"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/callingToInfo"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toTopOf="@id/callActionsContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/statusCallTv"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/callingToInfo"
        app:layout_constraintEnd_toEndOf="@id/callingToInfo"
        app:layout_constraintStart_toStartOf="@id/callingToInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/callActionsContainer"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_video_call_actions"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/videoBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_video_cam"
            android:scaleType="centerInside"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/action_button"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/soundBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_max_sound"
            android:tint="@color/black"
            android:scaleType="centerInside"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/white"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/micBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_mic"
            android:scaleType="centerInside"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/action_button"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/leaveRoomBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_call"
            android:visibility="visible"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/red"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>